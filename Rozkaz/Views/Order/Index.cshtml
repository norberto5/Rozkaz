@{
    ViewData["Title"] = "Rozkazy";
}
<h2>@ViewData["Title"]</h2>

@model List<Rozkaz.Models.OrderEntry>

<table class="table table-striped table-condensed" style="font-family: monospace">
    @{
        foreach (var entry in Model)
        {
            var order = entry.Order;
            <tr>
                <td>Rozkaz L. @order.Info.OrderNumber/@order.Info.Date.Year</td>
                <td>@order.Info.Author</td>
                <td>@order.Info.City</td>
                <td>@order.Info.Date.ToShortDateString()</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Opcje dla rozkazu">
                        <a class="btn btn-info" role="button" asp-area="" asp-controller="Order" asp-action="Show" asp-route-id="@entry.Uid">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Wyświetl</a>
                        <a class="btn btn-warning" role="button" asp-area="" asp-controller="Order" asp-action="Edit" asp-route-id="@entry.Uid">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edytuj</a>
                        <a class="btn btn-danger" role="button" asp-area="" asp-controller="Order" asp-action="Delete" asp-route-id="@entry.Uid">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Usuń</a>
                    </div>
                </td>
            </tr>
        }
    }
</table>

<p><a class="btn btn-success" role="button" asp-area="" asp-controller="Order" asp-action="Create"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Stwórz nowy rozkaz</a></p>
