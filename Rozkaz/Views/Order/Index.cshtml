@{
    ViewData["Title"] = "Rozkazy";
}
<h2>@ViewData["Title"]</h2>

@model List<Rozkaz.Models.OrderEntry>

<p><a asp-area="" asp-controller="Order" asp-action="Create"><b>Stwórz nowy rozkaz</b></a></p>

<table class="table table-striped table-condensed" style="font-family: monospace">
@{
    foreach (var entry in Model)
    {
        var order = entry.Order;
    <tr>
        <td>Rozkaz L. @order.Info.OrderNumber/@order.Info.Date.Year</td>
        <td>@order.Info.Author</td>
        <td>@order.Info.City</td>
        <td>@order.Info.Date.ToShortDateString()</td>
        <td>
            <a asp-area="" asp-controller="Order" asp-action="Show" asp-route-id="@entry.Uid"><b>Wyświetl</b></a> |
            <a asp-area="" asp-controller="Order" asp-action="Edit" asp-route-id="@entry.Uid">Edytuj</a> |
            Usuń
        </td>
    </tr>
    }
}
</table>