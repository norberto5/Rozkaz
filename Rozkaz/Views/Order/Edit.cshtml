@model Rozkaz.Models.OrderEntry
@{
    ViewData["Title"] = "Edycja rozkazu";
    var order = Model.Order;
}
<h2>@ViewData["Title"]</h2>

<form id="order_edit" method="post" action="@Model.Uid" enctype="application/x-www-form-urlencoded">
    <table class="table table-striped table-condensed" style="font-family: monospace">
        <tr>
            <td width="150">Numer rozkazu:</td>
            <td><input name="info.orderNumber" type="number" min="0" max="99" value="@order.Info.OrderNumber" maxlength="5"/></td>
        </tr>
        <tr>
            <td>Miejscowość:</td>
            <td><input name="info.city" type="text" maxlength="30" value="@order.Info.City" size="30"/></td>
        </tr>
        <tr>
            <td>Data:</td>
            <td><input name="info.date" type="date" value="@order.Info.Date.ToString("yyyy-MM-dd")" /></td>
        </tr>
        <tr>
            <td>Autor:</td>
            <td><input name="info.author" type="text" value="@order.Info.Author" size="40" maxlength="50"/></td>
        </tr>
    </table>
    <div>
        <input type="submit" value="Zapisz zmiany" />
    </div>
</form>
