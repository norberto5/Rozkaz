@{
    ViewData["Title"] = "Strona główna";
}
    <h2>@ViewData["Title"]</h2>

    <h4><a asp-area="" asp-controller="Home" asp-action="SampleOrder">Przykładowy rozkaz</a></h4>
<br />
<h4>Wygeneruj rozkaz demo</h4>
<form id="order_demo" method="post" action="Home/GenerateDemoOrder" enctype="application/x-www-form-urlencoded">
    <div>
        <label for="info.orderNumber">Numer rozkazu: </label>
        <input name="info.orderNumber" type="number" min="0" max="99" value="1" maxlength="2"/>
    </div>
    <div>
        <label for="info.author">Autor: </label>
        <input name="info.author" type="text" />
    </div>
    <div>
        <label for="info.city">Miejscowość: </label>
        <input name="info.city" type="text" maxlength="40" value="Szczecin"/>
    </div>
    <div>
        <label for="info.date">Data: </label>
        <input name="info.date" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
    </div>
    <div>
        <input type="submit" value="Generuj" />
    </div>
</form>